@model haver.Models.Engineer

<div class="container-fluid bg-light">
    <!-- Header -->
    <div class="row">
        <div class="col-md-12 py-4" style="background-color:#0C2340;">
            <h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
                Add A New Engineer
            </h4>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row py-4">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create" class="border p-4 shadow-sm" aria-label="Create Engineer Information">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <h6 class="mb-4" style="color: #0C2340;"><b>Fields marked with <span class="text-danger">*</span> are required</b></h6>

                <div class="form-grid">

                    <!-- Initials -->
                    <div class="form-group mb-3">
                        <label asp-for="EngineerInitials" class="control-label"
                               style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Initials <span class="text-danger">*</span>
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the engineer's Initials."></i>
                        </label>
                        <input asp-for="EngineerInitials" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" placeholder="Enter Initials" />
                        <span asp-validation-for="EngineerInitials" class="text-danger"></span>
                    </div>

                    <!-- First Name -->
                    <div class="form-group mb-3">
                        <label asp-for="FirstName" class="control-label"
                               style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            First Name <span class="text-danger">*</span>
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the engineer's first name."></i>
                        </label>
                        <input asp-for="FirstName" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" placeholder="Enter First Name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <!-- Last Name -->
                    <div class="form-group mb-3">
                        <label asp-for="LastName" class="control-label"
                               style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Last Name <span class="text-danger">*</span>
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the engineer's last name."></i>
                        </label>
                        <input asp-for="LastName" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" placeholder="Enter Last Name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <!-- Email Address -->
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label"
                               style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Email Address <span class="text-danger">*</span>
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the engineer's email address."></i>
                        </label>
                        <input asp-for="Email" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" placeholder="Enter Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

             
                 <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary"
                            style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif;">
                        <i class="fa-solid fa-plus"></i> Create Engineer
                    </button>

                    <a href="@Url.Action("Index", "Engineer")" class="btn btn-primary"
                       style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif; width: 250px;">
                        ⬅ Back to Engineers List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    .form-actions {
        margin-top: 20px;
    }

    @@media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}