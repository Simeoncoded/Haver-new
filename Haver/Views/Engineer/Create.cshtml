@model haver.Models.Engineer

<div class="container-fluid bg-light">
    <!-- Header -->
    <div class="row">
        <div class="col-md-12 py-4" style="background-color:#0C2340;">
            <h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
                Create an Engineer
            </h4>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row py-4">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create" class="border p-4 shadow-sm" aria-label="Create Engineer Information">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- First Name -->
                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        First Name
                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the engineer's first name."></i>
                    </label>
                    <input asp-for="FirstName" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;"  placeholder="Enter FirstName"/>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <!-- Last Name -->
                <div class="form-group mb-3">
                    <label asp-for="LastName" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Last Name
                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the engineer's last name."></i>
                    </label>
                    <input asp-for="LastName" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;"  placeholder="Enter LastName"/>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>



                <!-- Email Address -->
                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Email Address
                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the engineer's email address."></i>
                    </label>
                    <input asp-for="Email" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" placeholder="Enter Email Address"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary"
                            style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif;">
                        Create Engineer
                    </button>
                </div>
                <div class="d-flex flex-column align-items-start gap-2">
                    <!-- Back to Previous Page -->
                    <button onclick="goBack()" class="btn btn-primary"
                            style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif; width: 250px;">
                        ⬅ Back To Previous Page
                    </button>

                    <!-- Back to Machine List -->
                    <a href="@Url.Action("Index", "Engineer")" class="btn btn-primary"
                       style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif; width: 250px;">
                        ⬅ Back to Engineer List
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}