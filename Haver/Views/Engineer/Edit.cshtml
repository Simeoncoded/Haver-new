@model haver.Models.Engineer

<div class="container-fluid bg-light">
    <!-- Header -->
    <div class="row">
        <div class="col-md-12 py-4" style="background-color:#0C2340;">
            <h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
                Edit Engineer
            </h4>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row py-4">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit" class="border p-4 shadow-sm" aria-label="Edit Engineer Information">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />

                <!-- First Name -->
                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        First Name
                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Edit the engineer's first name."></i>
                    </label>
                    <input asp-for="FirstName" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <!-- Last Name -->
                <div class="form-group mb-3">
                    <label asp-for="LastName" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Last Name
                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Edit the engineer's last name."></i>
                    </label>
                    <input asp-for="LastName" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <!-- Phone -->
                <div class="form-group mb-3">
                    <label asp-for="Phone" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Phone
                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Edit the engineer's contact number."></i>
                    </label>
                    <input asp-for="Phone" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Email
                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Edit the engineer's email address."></i>
                    </label>
                    <input asp-for="Email" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <a href="@Url.Action("Index", "Engineer")" class="btn btn-primary"
                       style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif; width: 250px;">
                        ⬅ Back to Engineer List
                    </a>
                    <button type="submit" class="btn btn-primary"
                            style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif;">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}