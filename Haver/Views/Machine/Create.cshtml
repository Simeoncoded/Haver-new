@model haver.Models.Machine

<div class="container-fluid bg-light">
    <div class="row">
        <div class="col-md-12 py-4" style="background-color:#0C2340;">
            <h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
                Create a Machine
            </h4>
        </div>
    </div>

    <div class="row py-4">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create" class="border p-4 shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Machine Description
                    </label>
                    <input asp-for="Description" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SerialNumber" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Serial Number
                    </label>
                    <input asp-for="SerialNumber" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="SerialNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Quantity
                    </label>
                    <input asp-for="Quantity" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;"
                           type="number" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Size" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Machine Size
                    </label>
                    <input asp-for="Size" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Class" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Machine Class
                    </label>
                    <input asp-for="Class" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="Class" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SizeDeck" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Deck Size
                    </label>
                    <input asp-for="SizeDeck" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="SizeDeck" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary"
                            style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif;">
                        Create Machine
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 offset-md-3 mt-3">
            <partial name="_BackToList" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}