                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="AssemblyStart" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Assembly Start
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the assembly start date."></i>
                            </label>
                            <input asp-for="AssemblyStart" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="AssemblyStart" placeholder="Enter Assembly Start Date" />
                            <span asp-validation-for="AssemblyStart" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="AssemblyComplete" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Assembly Complete
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the assembly completion date."></i>
                            </label>
                            <input asp-for="AssemblyComplete" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="AssemblyComplete" placeholder="Enter Assembly Complete Date" />
                            <span asp-validation-for="AssemblyComplete" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="ShipExpected" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Ship Expected
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the expected shipping date."></i>
                            </label>
                            <input asp-for="ShipExpected" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="ShipExpected" placeholder="Enter Ship Expected Date" />
                            <span asp-validation-for="ShipExpected" class="text-danger"></span>
                        </div>
                    </div>
                    </div>
                <div class="row mb-3">
                    

                        <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="ShipActual" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">Ship Actual
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the actual shipping date."></i>
                            </label>
                            <input asp-for="ShipActual" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="ShipActual" placeholder="Enter Ship Actual Date" />
                            <span asp-validation-for="ShipActual" class="text-danger"></span>
                        </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="DeliveryExpected" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                   Delivery Expected
                                    <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the delivery expected date."></i>
                                </label>
                                <input asp-for="DeliveryExpected" class="form-control"
                                       style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="DeliveryExpected" placeholder="Enter Delivery Expected Date" />
                                <span asp-validation-for="DeliveryExpected" class="text-danger"></span>
                            </div>
                          

                        </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="DeliveryActual" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Delivery Actual
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the delivery actual date."></i>
                            </label>
                            <input asp-for="DeliveryActual" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="DeliveryExpected" placeholder="Enter Delivery Actual Date" />
                            <span asp-validation-for="DeliveryActual" class="text-danger"></span>
                        </div>
                    </div>
                        </div>

                <div class="row mb-3">
                       

                <div class="form-group">
                        <label asp-for="Notes" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Notes
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter Notes"></i>
                        </label>
                        <textarea asp-for="Notes" class="form-control summernote" style="border-color:#0C2340; font-family: 'Avenir Roman';"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
                </div>
               

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary mr-2"
                            style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif;">
                        Create 
                    </button>
                    <a asp-action="Index" class="btn btn-secondary"
                       style="background-color:#6c757d; border-color:#6c757d; font-family: 'Avenir Heavy', sans-serif;">
                        <i class="fa fa-arrow-left" aria-hidden="true"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

