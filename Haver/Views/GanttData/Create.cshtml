@model haver.Models.GanttData

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid bg-light">
    <!-- Header -->
    <div class="row">
        <div class="col-md-12 py-4" style="background-color:#0C2340;">
            <h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
                Add New Gantt Data
            </h4>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row py-4">
        <div class="col-md-10 offset-md-1">
            <h6 class="mb-4" style="color: #0C2340;"><b>Click the big question mark on the right to view how to add/edit milestone dates</b></h6>
            <div class="text-end">
                <i class="fas fa-question-circle fa-2x text-primary" role="button" data-bs-toggle="modal" data-bs-target="#helpModal" title="Click for help"></i>
            </div>

            <form asp-action="Create" class="border p-4 shadow-sm" aria-label="Create Gantt Data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <h6 class="mb-4" style="color: #0C2340;"><b>Fields marked with <span class="text-danger">*</span> are required</b></h6>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="SalesOrderID" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Sales Order<span class="text-danger">*</span>
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Select the machine associated with the Gantt data."></i>
                            </label>
                            <select asp-for="SalesOrderID" class="form-control"
                                    style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" asp-items="ViewBag.SalesOrderID" id="SalesOrderID">
                                <option value="">Select a Sales Order</option>
                            </select>
                            <span asp-validation-for="SalesOrderID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="AppDRcd" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Approved Drawings Recieved
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the Approved Drawings Recieved Date"></i>
                            </label>
                            <input asp-for="AppDRcd" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="AppDRcd" placeholder="Enter Approved Drawings Recieved" />
                            <span asp-validation-for="AppDRcd" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="StartOfWeek" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            @Html.DisplayNameFor(model => model.StartOfWeek)
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Week Start Day"></i>
                        </label>
                        <select asp-for="StartOfWeek" class="form-control"
                                style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;"
                                asp-items="Html.GetEnumSelectList<WeekStartOption>()"></select>
                        <span asp-validation-for="StartOfWeek" class="text-danger"></span>
                    </div>
                    </div>
                    
                </div>

            
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="EngExpected" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Engineering Package Expected
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the Engineering Package Expected date."></i>
                            </label>
                            <input asp-for="EngExpected" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="EngExpected" placeholder="Enter Engineering Package Expected Date" />
                            <span asp-validation-for="EngExpected" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="EngReleased" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Engineering Released
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the engineering release date."></i>
                            </label>
                            <input asp-for="EngReleased" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="EngReleased" placeholder="Enter Engineering Release Date" />
                            <span asp-validation-for="EngReleased" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="PackageReleased" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Package Released
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the package release date."></i>
                            </label>
                            <input asp-for="PackageReleased" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="PackageReleased" placeholder="Enter Package Release Date" />
                            <span asp-validation-for="PackageReleased" class="text-danger"></span>
                        </div>
                    </div>
                    
                </div>

               
                <div class="row mb-3">
                   
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="PurchaseOrdersIssued" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Purchase Orders Issued
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the date when purchase orders were issued."></i>
                            </label>
                            <input asp-for="PurchaseOrdersIssued" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="PurchaseOrdersIssued" placeholder="Enter Purchase Orders Issued Date" />
                            <span asp-validation-for="PurchaseOrdersIssued" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="PurchaseOrdersCompleted" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Purchase Orders Completed
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the date when purchase orders were completed."></i>
                            </label>
                            <input asp-for="PurchaseOrdersCompleted" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="PurchaseOrdersCompleted" placeholder="Enter Purchase Orders Completed Date" />
                            <span asp-validation-for="PurchaseOrdersCompleted" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="SupplierPODue" class="control-label"
