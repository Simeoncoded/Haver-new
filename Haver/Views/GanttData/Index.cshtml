@model IEnumerable<haver.Models.GanttData>

@{
    ViewData["Title"] = "Engineers";
    var currentSortField = ViewData["sortField"]?.ToString();
    var currentSortDirection = ViewData["sortDirection"]?.ToString();
}

<h1 class="text-center my-4" aria-label="Engineer Index">Engineer</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn" aria-label="Create a new engineer" data-bs-toggle="tooltip" title="Create a new engineer">
        <i class="fa-solid fa-plus"></i> Create New @ViewData["ControllerFriendlyName"]
    </a>
</div>

<form asp-action="Index" method="get" aria-label="Engineer filter form">
    <div class="form-horizontal">
        <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
        <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
        <button class="btn @ViewData["Filtering"] mb-3" type="button" data-bs-toggle="collapse" id="filterToggle" data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter" aria-label="Toggle filter/search options" data-bs-toggle="tooltip" title="Filter/Search">
            <i class="fa-solid fa-filter"></i> Filter/Search @ViewData["numberFilters"]
        </button>
        <div class="collapse @ViewData["ShowFilter"]" id="collapseFilter">
            <div class="card card-body bg-light">
                <div class="row">
                    <div class="form-group col-md-4">
                        <label class="form-label fw-bold" for="SearchString">Search by Engineer Name:</label>
                        @Html.TextBox("SearchString", null, new { @class = "form-control", placeholder = "Enter engineer name", aria_label = "Enter engineer name to search" })
                    </div>
                    <div class="form-group col-md-4 align-self-end">
                        <input type="submit" name="actionButton" value="Filter" class="btn btn-outline-primary" aria-label="Apply filter" data-bs-toggle="tooltip" title="Apply filter" />
                        <a asp-action="Index" class="btn btn-outline-secondary" aria-label="Clear filter" data-bs-toggle="tooltip" title="Clear filter">Clear</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

<table class="table table-striped table-bordered table-hover shadow-sm">
    <thead class="bg-dark text-white text-center">
        <tr>
            <th data-bs-toggle="tooltip" title="Order Number assigned to the sale">Order Number</th>
            <th data-bs-toggle="tooltip" title="Customer associated with the order">Customer</th>
            <th data-bs-toggle="tooltip" title="Machine associated with the order">@Html.DisplayNameFor(model => model.Machine)</th>
            <th data-bs-toggle="tooltip" title="Date when approval drawings were received">App Drw Rcd</th>
            <th data-bs-toggle="tooltip" title="Engineering release date">Eng Rel</th>
            <th class="align-middle">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td tabindex="0">@Html.DisplayFor(modelItem => item.Machine.SalesOrder.OrderNumber)</td>
                <td tabindex="0">@Html.DisplayFor(modelItem => item.Machine.SalesOrder.CompanyName)</td>
                <td tabindex="0">@Html.DisplayFor(modelItem => item.Machine.Description)</td>
                <td tabindex="0">@Html.DisplayFor(modelItem => item.AppDRcd)</td>
                <td tabindex="0">@Html.DisplayFor(modelItem => item.EngReleased)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm mx-1"
                       aria-label="Edit order @item.Machine.SalesOrder.OrderNumber"
                       data-bs-toggle="tooltip" title="Edit Order">
                        <i class="fa-solid fa-pen-to-square"></i> 
                    </a>
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm mx-1 text-white"
                       aria-label="View details of order @item.Machine.SalesOrder.OrderNumber"
                       data-bs-toggle="tooltip" title="View Details">
                        <i class="fa-solid fa-circle-info"></i> 
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm mx-1"
                       aria-label="Delete order @item.Machine.SalesOrder.OrderNumber"
                       data-bs-toggle="tooltip" title="Delete Order">
                        <i class="fa-solid fa-delete-left"></i> 
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<</form>

@section Scripts {
    <script type="text/javascript">
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}

<style>
    .align-middle button {
        background: none;
        outline: none;
    }
</style>
