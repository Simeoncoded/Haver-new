@model haver.Models.GanttData

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid bg-light">
    <!-- Header -->
    <div class="row">
        <div class="col-md-12 py-4" style="background-color:#0C2340;">
            <h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
                Edit Gantt Data
            </h4>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row py-4">
        <div class="col-md-10 offset-md-1">
            <h6 class="mb-4" style="color: #0C2340;"><b>Click the big question mark on the right to view how to add/edit milestone dates</b></h6>
            <div class="text-end">
                <i class="fas fa-question-circle fa-2x text-primary" role="button" data-bs-toggle="modal" data-bs-target="#helpModal" title="Click for help"></i>
            </div>

            <form asp-action="Edit" class="border p-4 shadow-sm" aria-label="Edit Gantt Data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <h6 class="mb-4" style="color: #0C2340;"><b>Fields marked with <span class="text-danger">*</span> are required</b></h6>


                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="SalesOrderID" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Sales Order <span class="text-danger">*</span>
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title=" The sales order associated with the Gantt data."></i>
                            </label>
                            <select class="form-control" id="SalesOrderID" disabled>
                                <option value="@Model.SalesOrderID">@Model.SalesOrder?.OrderNumber</option>
                            </select>
                            <input type="hidden" asp-for="SalesOrderID" />

                            <span asp-validation-for="SalesOrderID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="StartOfWeek" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                @Html.DisplayNameFor(model => model.StartOfWeek)
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Week Start Day"></i>
                            </label>
                            <select asp-for="StartOfWeek" class="form-control"
                                    style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;"
                                    asp-items="Html.GetEnumSelectList<WeekStartOption>()"></select>
                            <span asp-validation-for="StartOfWeek" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="AppDExp" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Approval Drawings Due 
                              @*   <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the Approval Drawings Due Date"></i> *@
                            </label>
                            <input asp-for="AppDExp" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="AppDRcd" placeholder="Enter Approval Drawings Due" readonly/>
                            <span asp-validation-for="AppDExp" class="text-danger"></span>
                        </div>
                    </div>
                   
                   
                    
                </div>

            
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="EngExpected" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Engineering Package Due
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the Engineering Package Due date."></i>
                            </label>
                            <input asp-for="EngExpected" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="EngExpected" placeholder="Enter Engineering Package Expected Date" readonly />
                            <span asp-validation-for="EngExpected" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="PurchaseOrdersIssued" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Purchase Orders Issued
                                @* <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the date when purchase orders were issued."></i> *@
                            </label>
                            <input asp-for="PurchaseOrdersIssued" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="PurchaseOrdersIssued" placeholder="Enter Purchase Orders Issued Date" readonly />
                            <span asp-validation-for="PurchaseOrdersIssued" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="AppDRcd" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Approval Drawings Released
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the Approval Drawings Release Date"></i>
                            </label>
                            <input asp-for="AppDRcd" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="AppDRcd" placeholder="Enter Approved Drawings Recieved" />
                            <span asp-validation-for="AppDRcd" class="text-danger"></span>
                        </div>
                    </div>

                   
                   
                    
                </div>

                <!-- Row 3: PurchaseOrdersIssued, PurchaseOrdersCompleted, SupplierPODue -->
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="EngReleased" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Engineering Package Released
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the engineering package release date."></i>
                            </label>
                            <input asp-for="EngReleased" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="EngReleased" placeholder="Enter Engineering Release Date" />
                            <span asp-validation-for="EngReleased" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="PackageReleased" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Package Released to PIC
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the package release date."></i>
                            </label>
                            <input asp-for="PackageReleased" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="PackageReleased" placeholder="Enter Package Release Date" />
                            <span asp-validation-for="PackageReleased" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="PurchaseOrdersCompleted" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Purchase Orders Completed
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the date when purchase orders were completed."></i>
                            </label>
                            <input asp-for="PurchaseOrdersCompleted" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="PurchaseOrdersCompleted" placeholder="Enter Purchase Orders Completed Date" />
                            <span asp-validation-for="PurchaseOrdersCompleted" class="text-danger"></span>
                        </div>
                    </div>
                   
                </div>

                <!-- Row 4: AssemblyStart, AssemblyComplete, ShipExpected -->
                <div class="row mb-3">
                   
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="SupplierPODue" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Supplier PO Due
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the supplier PO due date."></i>
                            </label>
                            <input asp-for="SupplierPODue" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="SupplierPODue" placeholder="Enter Supplier PO Due Date" />
                            <span asp-validation-for="SupplierPODue" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="AssemblyStart" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Assembly Start
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the assembly start date."></i>
                            </label>
                            <input asp-for="AssemblyStart" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="AssemblyStart" placeholder="Enter Assembly Start Date" />
                            <span asp-validation-for="AssemblyStart" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="AssemblyComplete" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Assembly Complete
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the assembly completion date."></i>
                            </label>
                            <input asp-for="AssemblyComplete" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="AssemblyComplete" placeholder="Enter Assembly Complete Date" />
                            <span asp-validation-for="AssemblyComplete" class="text-danger"></span>
                        </div>
                    </div>
                    </div>
                <div class="row mb-3">
                   
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="ShipExpected" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Ship Expected
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the expected shipping date."></i>
                            </label>
                            <input asp-for="ShipExpected" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="ShipExpected" placeholder="Enter Ship Expected Date" />
                            <span asp-validation-for="ShipExpected" class="text-danger"></span>
                        </div>
                        </div>

                        <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="ShipActual" class="control-label"
                                   style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">Ship Actual
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the actual shipping date."></i>
                            </label>
                            <input asp-for="ShipActual" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="ShipActual" placeholder="Enter Ship Actual Date" />
                            <span asp-validation-for="ShipActual" class="text-danger"></span>
                        </div>
                        </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="DeliveryExpected" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                Delivery Expected
                                <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the delivery expected date."></i>
                            </label>
                            <input asp-for="DeliveryExpected" class="form-control"
                                   style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="DeliveryExpected" placeholder="Enter Delivery Expected Date" />
                            <span asp-validation-for="DeliveryExpected" class="text-danger"></span>
                        </div>
                    </div>
                        </div>

                <div class="row mb-3">
                   
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="DeliveryActual" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                                  Delivery Actual
                                    <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the delivery actual date."></i>
                                </label>
                                <input asp-for="DeliveryActual" class="form-control"
                                       style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="DeliveryExpected" placeholder="Enter Delivery Actual Date" />
                                <span asp-validation-for="DeliveryActual" class="text-danger"></span>
                            </div>
                        </div>
                        

                <div class="form-group">
                        <label asp-for="Notes" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Notes
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter Notes"></i>
                        </label>
                        <textarea asp-for="Notes" class="form-control summernote" style="border-color:#0C2340; font-family: 'Avenir Roman';"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
                </div>
               

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary mr-2"
                            style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif;">
                       <i class="fa-solid fa-floppy-disk"></i>  Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary"
                       style="background-color:#6c757d; border-color:#6c757d; font-family: 'Avenir Heavy', sans-serif;">
                        <i class="fa fa-arrow-left" aria-hidden="true"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Help Modal -->
<div class="modal fade" id="helpModal" tabindex="-1" aria-labelledby="helpModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="helpModalLabel">Form Instructions</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <hr>
                <h5>Milestone Dates</h5>
                <p>Each milestone has a defined start and end date, which are used to track progress.</p>

                <ul>
                    <li>
                        <strong>Engineering Released to Customer</strong>
                        <br>Start Date: <code>EngExpected</code>
                        <br>End Date: <code>EngReleased</code>
                        <br>Color: <span style="color:#FABF8F;">■</span>
                    </li>
                    <li>
                        <strong>Customer Approval Received</strong>
                        <br>Start Date: <code>AppDExp</code>
                        <br>End Date: <code>AppDRcd</code>
                        <br>Color: <span style="color:#E26B0A;">■</span>
                    </li>
                    <li>
                        <strong>Package Released to PIC/Spare Parts to Customer Service</strong>
                        <br>Start Date: <code>PackageReleased</code>
                        <br>End Date: <code>PackageReleased</code> (Same Day Event)
                        <br>Color: <span style="color:#ADF802;">■</span>
                    </li>
                    <li>
                        <strong>Purchase Orders Issued</strong>
                        <br>Start Date: <code>PurchaseOrdersIssued</code>
                        <br>End Date: <code>PurchaseOrdersCompleted</code>
                        <br>Color: <span style="color:#8DB4E2;">■</span>
                    </li>
                    <li>
                        <strong>Supplier Purchase Orders Due</strong>
                        <br>Start Date: <code>SupplierPODue</code>
                        <br>End Date: <code>SupplierPODue</code> (Same Day Event)
                        <br>Color: <span style="color:#FF99CC;">■</span>
                    </li>
                    <li>
                        <strong>Machine Assembly and Testing</strong>
                        <br>Start Date: <code>AssemblyStart</code>
                        <br>End Date: <code>AssemblyComplete</code>
                        <br>Color: <span style="color:#00B050;">■</span>
                    </li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

