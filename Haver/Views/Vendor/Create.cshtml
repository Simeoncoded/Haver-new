@model haver.Models.Vendor

<partial name="_ViewHeading" />

<div class="container-fluid bg-light">
    <div class="row">
        <div class="col-md-12 py-4" style="background-color: #0361A3;">
            <h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
                Vendor Registration
            </h4>
        </div>
    </div>

    <div class="row py-4">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create" class="border p-4 shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color: #0361A3;">
                        Vendor Name
                    </label>
                    <input asp-for="Name" class="form-control"
                           style="border-color: #0361A3; font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Phone" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color: #0361A3;">
                        Contact Number
                    </label>
                    <input asp-for="Phone" class="form-control"
                           style="border-color: #0361A3; font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color: #0361A3;">
                        Email Address
                    </label>
                    <input asp-for="Email" class="form-control"
                           style="border-color: #0361A3; font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary"
                            style="background-color: #0361A3; border-color: #0361A3; font-family: 'Avenir Heavy', sans-serif;">
                        Create Vendor
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <partial name="_BackToList" />
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
