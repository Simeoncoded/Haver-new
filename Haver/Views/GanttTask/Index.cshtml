@model IEnumerable<haver.Models.GanttTask>

@{
    ViewData["Title"] = "Gantt Chart Index";
}

<h1>Gantt Chart Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Task</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.SalesOrder)</th>
            <th>@Html.DisplayNameFor(model => model.StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.EndDate)</th>
            <th>@Html.DisplayNameFor(model => model.Notes)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.SalesOrder.OrderNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info btn-sm">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Gantt Chart Container -->
<h2>Gantt Chart</h2>
<div id="gantt"></div>

@section stylesheets {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/frappe-gantt/0.6.1/frappe-gantt.css" />
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/frappe-gantt/0.6.1/frappe-gantt.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            fetch('/GanttTask/GetGanttData')
                .then(response => {
                    if (!response.ok) throw new Error('Failed to load tasks');
                    return response.json();
                })
                .then(data => {
                    const tasks = data.map(task => ({
                        id: task.id.toString(),
                        name: task.name,
                        start: task.start,
                        end: task.end,
                        progress: task.progress,
                        dependencies: task.dependencies || ""
                    }));

                    const gantt = new Gantt("#gantt", tasks, {
                        on_click: task => console.log("Task clicked:", task),
                        on_date_change: (task, start, end) => {
                            updateTask(task.id, start.toISOString().split('T')[0], end.toISOString().split('T')[0], task.progress);
                        },
                        on_progress_change: (task, progress) => {
                            updateTask(task.id, task.start, task.end, progress);
                        },
                        view_mode: 'Week',
                        language: 'en'
                    });
                })
                .catch(error => console.error('Error:', error));

            function updateTask(id, start, end, progress) {
                fetch('/GanttTask/UpdateTask', {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({
                        id: parseInt(id),
                        startDate: start,
                        endDate: end,
                        progress: progress
                    })
                })
                    .then(response => {
                        if (!response.ok) throw new Error('Update failed');
                        console.log("Task updated successfully.");
                    })
                    .catch(error => console.error("Error updating task:", error));
            }
        });
    </script>
}
