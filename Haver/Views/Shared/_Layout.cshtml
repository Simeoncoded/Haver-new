<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - haver</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/haver.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
	@await RenderSectionAsync("Head", required: false)
	<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
</head>
<body>

	<!-- Sidebar -->
	<div class="sidebar">
		<img src="/Images/LOGO_NIAGARA_BRANCO_com_Fundo azul.png" alt="Logo for Haver" class="sidebar-logo">

		<a href="@Url.Action("Index", "Home")">Home</a>

		<button onclick="scrollToTop()" id="scrollToTopBtn" class="btn btn-primary">
			<i class="fa-solid fa-arrow-up"></i>
		</button>


		<!-- Customer Dropdown -->
		<div class="dropdown">
			<a href="#" class="dropdown-btn" onclick="toggleDropdown(event)">
				Customer <i class="fa fa-chevron-down arrow-icon"></i>
			</a>
			<div class="dropdown-content">
				<a asp-area="" asp-controller="Customer" asp-action="Index">View Customers</a>
				<a asp-area="" asp-controller="Customer" asp-action="Create">Create Customer</a>
			</div>
		</div>

		<div class="dropdown">
			<a href="#" class="dropdown-btn" onclick="toggleDropdown(event)">
				Vendor <i class="fa fa-chevron-down arrow-icon"></i>
			</a>
			<div class="dropdown-content">
				<a asp-area="" asp-controller="Vendor" asp-action="Index">View Vendors</a>
				<a asp-area="" asp-controller="Vendor" asp-action="Create">Create Vendors</a>
			</div>
		</div>

		<!-- Engineer Dropdown -->
		<div class="dropdown">
			<a href="#" class="dropdown-btn" onclick="toggleDropdown(event)">
				Engineer <i class="fa fa-chevron-down arrow-icon"></i>
			</a>
			<div class="dropdown-content">
				<a asp-area="" asp-controller="Engineer" asp-action="Index">View Engineers</a>
				<a asp-area="" asp-controller="Engineer" asp-action="Create">Create Engineer</a>
			</div>
		</div>

		<!-- Sales Order Dropdown -->
		<div class="dropdown">
			<a href="#" class="dropdown-btn" onclick="toggleDropdown(event)">
				Sales Order <i class="fa fa-chevron-down arrow-icon"></i>
			</a>
			<div class="dropdown-content">
				<a asp-area="" asp-controller="SalesOrder" asp-action="Index">View Sales Orders</a>
				<a asp-area="" asp-controller="SalesOrder" asp-action="Create">Create Sales Order</a>
			</div>
		</div>


		<!-- Machine Dropdown -->
		<div class="dropdown">
			<a href="#" class="dropdown-btn" onclick="toggleDropdown(event)">
				Machine <i class="fa fa-chevron-down arrow-icon"></i>
			</a>
			<div class="dropdown-content">
				<a asp-area="" asp-controller="Machine" asp-action="Index">View Machines</a>
				<a asp-area="" asp-controller="Machine" asp-action="Create">Create Machine</a>
			</div>
		</div>

		<!-- Package Release Dropdown -->
		<div class="dropdown">
			<a href="#" class="dropdown-btn" onclick="toggleDropdown(event)">
				Package Release <i class="fa fa-chevron-down arrow-icon"></i>
			</a>
			<div class="dropdown-content">
				<a asp-area="" asp-controller="PackageRelease" asp-action="Index">View Package Release</a>
				<a asp-area="" asp-controller="PackageRelease" asp-action="Create">Create Package Release</a>
			</div>
		</div>

	</div>

	


	<!-- Main Content -->
	<div class="main-content">
		<main role="main">
			@RenderBody()
		</main>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
	function toggleDropdown(event) {
		event.preventDefault();
		let dropdown = event.target.closest('.dropdown');
		dropdown.classList.toggle('active');

		// Close all other dropdowns except the clicked one
		document.querySelectorAll('.dropdown').forEach(d => {
			if (d !== dropdown) {
				d.classList.remove('active');
			}
		});
	}
</script>

<style>
	/* Sidebar Styles */
	body {
		display: flex;
		margin: 0;
		height: 100vh;
		color: #001a3d;
		font-family: Arial, sans-serif;
	}

	.sidebar {
		width: 250px;
		background-color: #001a3d;
		padding: 20px;
		color: white;
		display: flex;
		flex-direction: column;
		position: fixed;
		height: 100vh;
		align-items: center;
		text-align: center;
	}

	.sidebar-logo {
		width: 200px;
		margin-bottom: 20px;
	}

	.sidebar a {
		color: white;
		text-decoration: none;
		padding: 10px;
		display: block;
		font-weight: bold;
		border-radius: 5px;
		transition: background 0.3s;
		width: 100%;
		text-align: center;
	}

		.sidebar a:hover {
			background: #2a497b;
		}

	/* Main Content Styles */
	.main-content {
		margin-left: 270px;
		padding: 20px;
		width: calc(100% - 270px);
	}

	/* Dropdown Styles */
	.dropdown {
		width: 100%;
		text-align: center;
		position: relative;
	}

	.dropdown-btn {
		color: white;
		text-decoration: none;
		padding: 12px;
		display: flex;
		justify-content: center;
		align-items: center;
		font-weight: bold;
		border-radius: 5px;
		width: 100%;
		background: none;
		border: none;
		cursor: pointer;
		gap: 5px;
	}

		.dropdown-btn i {
			transition: transform 0.3s ease;
		}

	.dropdown.active .dropdown-btn i {
		transform: rotate(180deg);
	}

	.dropdown-content {
		display: none;
		flex-direction: column;
		background-color: #001a3d;
		width: 100%;
		padding: 5px 0;
	}

	.dropdown.active .dropdown-content {
		display: flex;
	}

	.dropdown-content a {
		color: white;
		padding: 10px;
		display: block;
		text-decoration: none;
		font-weight: normal !important;
		font-size: 16px;
		text-align: center;
	}

		.dropdown-content a:hover {
			background: rgba(255, 255, 255, 0.2);
		}

	#scrollToTopBtn {
		position: fixed;
		bottom: 20px;
		right: 20px;
		display: none; /* Hidden by default */
		z-index: 1000;
		border: none;
		outline: none;
		background-color: #007bff;
		color: white;
		cursor: pointer;
		padding: 10px 15px;
		border-radius: 50%;
		font-size: 20px;
		box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
		transition: opacity 0.3s ease-in-out;
	}

		#scrollToTopBtn:hover {
			background-color: #0056b3;
		}

</style>
<script>
	// Show/hide button on scroll
	window.onscroll = function () {
		var btn = document.getElementById("scrollToTopBtn");
		if (document.body.scrollTop > 300 || document.documentElement.scrollTop > 300) {
			btn.style.display = "block";
		} else {
			btn.style.display = "none";
		}
	};

	// Scroll to top when button is clicked
	function scrollToTop() {
		window.scrollTo({ top: 0, behavior: "smooth" });
	}
</script>
