@model haver.Models.PackageRelease

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid bg-light my-3">
    <!-- Header -->
    <div class="row">
        <div class="col-md-12 py-4" style="background-color:#0C2340;">
            <h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
                Package Release - Delete
            </h4>
        </div>
    </div>

    <!-- Delete Confirmation Content -->
    <div class="row py-4">
        <div class="col-md-8 offset-md-2">
            <div class="card border shadow-sm">
                <div class="card-body p-4">
                    <h3 class="text-center" style="font-family: 'Avenir Heavy', sans-serif; color: #0C2340;">
                        Are you sure you want to delete this?
                    </h3>

                    <h4 class="text-center mt-4" style="font-family: 'Avenir Heavy', sans-serif; color: #0C2340;">
                        Package Release Details
                    </h4>
                    <hr />
                    <dl class="row">
                        <!-- Name -->
                        <dt class="col-sm-3" style="font-family: 'Avenir Heavy', sans-serif; color: #0C2340;">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-9 mb-3" style="font-family: 'Avenir Roman', sans-serif;">
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <!-- PReleaseDateP -->
                        <dt class="col-sm-3" style="font-family: 'Avenir Heavy', sans-serif; color: #0C2340;">
                            @Html.DisplayNameFor(model => model.PReleaseDateP)
                        </dt>
                        <dd class="col-sm-9 mb-3" style="font-family: 'Avenir Roman', sans-serif;">
                            @Html.DisplayFor(model => model.PReleaseDateP)
                        </dd>

                        <!-- PReleaseDateA -->
                        <dt class="col-sm-3" style="font-family: 'Avenir Heavy', sans-serif; color: #0C2340;">
                            @Html.DisplayNameFor(model => model.PReleaseDateA)
                        </dt>
                        <dd class="col-sm-9 mb-3" style="font-family: 'Avenir Roman', sans-serif;">
                            @Html.DisplayFor(model => model.PReleaseDateA)
                        </dd>

                        <!-- Notes -->
                        <dt class="col-sm-3" style="font-family: 'Avenir Heavy', sans-serif; color: #0C2340;">
                            @Html.DisplayNameFor(model => model.Notes)
                        </dt>
                        <dd class="col-sm-9 mb-3" style="font-family: 'Avenir Roman', sans-serif;">
                            @Html.Raw(Model.Notes)
                        </dd>

                        <!-- SalesOrder -->
                        <dt class="col-sm-3" style="font-family: 'Avenir Heavy', sans-serif; color: #0C2340;">
                            @Html.DisplayNameFor(model => model.SalesOrder)
                        </dt>
                        <dd class="col-sm-9 mb-3" style="font-family: 'Avenir Roman', sans-serif;">
                            @Html.DisplayFor(model => model.SalesOrder.OrderNumber)
                        </dd>
                    </dl>

                    <!-- Delete Form -->
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ID" />
                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Index", "PackageRelease")" class="btn btn-secondary" style="font-family: 'Avenir Heavy', sans-serif; width: 250px;">
                                Back to List
                            </a>
                            <button type="submit" class="btn btn-danger" style="font-family: 'Avenir Heavy', sans-serif; width: 250px;">
                                Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
