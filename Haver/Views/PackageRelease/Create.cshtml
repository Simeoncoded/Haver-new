@model haver.Models.PackageRelease

<div class="container-fluid bg-light">
    <div class="row">
        <div class="col-md-12 py-4" style="background-color: #0361A3;">
            <h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
                Package Release
            </h4>
        </div>
    </div>

    <div class="row py-4">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create" class="border p-4 shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color: #0361A3;">
                        Name
                    </label>
                    <input asp-for="Name" class="form-control"
                           style="border-color: #0361A3; font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PReleaseDateP" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color: #0361A3;">
                        Planned Release Date
                    </label>
                    <input asp-for="PReleaseDateP" class="form-control"
                           style="border-color: #0361A3; font-family: 'Avenir Roman', sans-serif;"
                           type="date" />
                    <span asp-validation-for="PReleaseDateP" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PReleaseDateA" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color: #0361A3;">
                        Actual Release Date
                    </label>
                    <input asp-for="PReleaseDateA" class="form-control"
                           style="border-color: #0361A3; font-family: 'Avenir Roman', sans-serif;"
                           type="date" />
                    <span asp-validation-for="PReleaseDateA" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Notes" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color: #0361A3;">
                        Notes
                    </label>
                    <textarea asp-for="Notes" class="form-control"
                              style="border-color: #0361A3; font-family: 'Avenir Roman', sans-serif; min-height: 100px;"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MachineScheduleID" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color: #0361A3;">
                        Machine Schedule
                    </label>
                    <select asp-for="MachineScheduleID" class="form-control"
                            asp-items="ViewBag.MachineScheduleID"
                            style="border-color: #0361A3; font-family: 'Avenir Roman', sans-serif;">
                        <option value="">Select Machine Schedule</option>
                    </select>
                    <span asp-validation-for="MachineScheduleID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary"
                            style="background-color: #0361A3; border-color: #0361A3; font-family: 'Avenir Heavy', sans-serif;">
                        Create Package Release
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 offset-md-3 mt-3">
            <partial name="_BackToList" />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}