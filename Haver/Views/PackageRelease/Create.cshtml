@model haver.Models.PackageRelease

<div class="container-fluid bg-light">
    <!-- Header -->
    <div class="row">
        <div class="col-md-12 py-4" style="background-color:#0C2340;">
            <h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
                Create a Package Release related to a sales order
            </h4>
        </div>
    </div>

    <!-- Form Section -->
    <div class="row py-4">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create" class="border p-4 shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Name Field -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Name
                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the name of the package release."></i>
                    </label>
                    <input asp-for="Name" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Planned Release Date Field -->
                <div class="form-group mb-3">
                    <label asp-for="PReleaseDateP" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Planned Release Date
                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Select the planned release date."></i>
                    </label>
                    <input asp-for="PReleaseDateP" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" type="date" />
                    <span asp-validation-for="PReleaseDateP" class="text-danger"></span>
                </div>

                <!-- Actual Release Date Field -->
                <div class="form-group mb-3">
                    <label asp-for="PReleaseDateA" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Actual Release Date
                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Select the actual release date."></i>
                    </label>
                    <input asp-for="PReleaseDateA" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" type="date" />
                    <span asp-validation-for="PReleaseDateA" class="text-danger"></span>
                </div>

                <!-- Notes Field -->
                <div class="form-group mb-3">
                    <label asp-for="Notes" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Notes
                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter additional notes for the release."></i>
                    </label>
                    <textarea asp-for="Notes" class="form-control summernote"
                              style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif; min-height: 100px;"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <!-- Sales Order Dropdown -->
                @if (Model.SalesOrderID != 0)
                {
                    <!-- Read-only input if SalesOrderID is pre-filled -->
                    <div class="form-group mb-3">
                        <label asp-for="SalesOrderID" class="control-label"
                               style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Sales Order
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip"
                               title="This sales order is automatically linked to this package release."></i>
                        </label>
                        <input type="text" class="form-control" value="@ViewBag.SalesOrderNumber" readonly
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <input type="hidden" asp-for="SalesOrderID" />
                    </div>
                }
                else
                {
                    <!-- Dropdown for selecting SalesOrder if not pre-filled -->
                    <div class="form-group mb-3">
                        <label asp-for="SalesOrderID" class="control-label"
                               style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Sales Order
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip"
                               title="Select the sales order related to this package release."></i>
                        </label>
                        <select asp-for="SalesOrderID" class="form-control"
                                asp-items="ViewBag.SalesOrderID"
                                style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;">
                            <option value="">Select Sales Order</option>
                        </select>
                        <span asp-validation-for="SalesOrderID" class="text-danger"></span>
                    </div>
                }


                <!-- Submit Button -->
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary"
                            style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif;">
                        Create Package Release
                    </button>
                </div>
                <div class="d-flex flex-column align-items-start gap-2">
                    <!-- Back to Previous Page -->
                  @*   <button onclick="goBack()" class="btn btn-primary"
                            style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif; width: 250px;">
                        ⬅ Back To Previous Page
                    </button>
 *@
                    <!-- Back to Machine List -->
                    <a href="@Url.Action("Index", "PackageRelease")" class="btn btn-primary"
                       style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif; width: 250px;">
                        ⬅ Back to Package Release List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

