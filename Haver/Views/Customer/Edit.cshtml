@model haver.Models.Customer




<div class="container-fluid bg-light">
    <!-- Header -->
    <div class="row">
        <div class="col-md-12 py-4" style="background-color:#0C2340;">
            <h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
                Edit Customer
            </h4>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row py-4">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit" class="border p-4 shadow-sm" aria-label="Edit Customer Information">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />

                <!-- Company Name -->
                <div class="form-group mb-3">
                    <label asp-for="CompanyName" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Company Name
                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Edit the customer's company name (if applicable)."></i>
                    </label>
                    <input asp-for="CompanyName" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>


                <!-- Contact Number -->
                <div class="form-group mb-3">
                    <label asp-for="Phone" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Contact Number
                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Edit the customer's contact number."></i>
                    </label>
                    <input asp-for="Phone" class="form-control"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

              
                <!-- Submit Button -->
                <div class="form-group text-center">
                    <div class="d-flex flex-wrap justify-content-center gap-2">

                        <button type="submit" value="false" class="btn mr-2"
                                style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif;">
                            <i class="fa-solid fa-floppy-disk"></i> Save
                        </button>

                        <a asp-action="Index" class="btn btn-secondary"
                           style="background-color:#6c757d; border-color:#6c757d; font-family: 'Avenir Heavy', sans-serif;">
                            <i class="fa fa-arrow-left" aria-hidden="true"></i> Back to List
                        </a>


                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}

