@model haver.Models.Customer




<div id="cPrint" class="container-fluid bg-light">
    <!-- Header -->
    <div class="row">
        <div class="col-md-12 py-4" style="background-color:#0C2340;">
            <h4 class="text-white text-center" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
                Customer Details
            </h4>
        </div>
    </div>

    <!-- Details Content -->
    <div class="row py-4">
        <div class="col-md-10 offset-md-1">
            <div class="card border shadow-sm">
                <div class="card-body p-4">
                    <!-- Section: Customer Information -->
                    <div class="mb-5">
                        <h5 class="mb-4" style="font-family: 'Avenir Heavy', sans-serif; color: #0C2340; border-bottom: 2px solid #0C2340; padding-bottom: 8px;">
                            Customer Information
                        </h5>
                        <div class="row">

                            <div class="row">
                                <!-- Company Name -->
                                <div class="col-md-4 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h6 class="card-title" style="font-family: 'Avenir Heavy', sans-serif; color: #0C2340;">
                                                <span data-bs-toggle="tooltip" data-bs-placement="top" title="Customer's company name">Company Name</span>
                                            </h6>
                                            <p class="card-text" style="font-family: 'Avenir Roman', sans-serif;">
                                                @Html.DisplayFor(model => model.CompanyName)
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <!-- Phone -->
                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="card-title" style="font-family: 'Avenir Heavy', sans-serif; color: #0C2340;">
                                            <span data-bs-toggle="tooltip" data-bs-placement="top" title="Customer's phone number">Phone</span>
                                        </h6>
                                        <p class="card-text" style="font-family: 'Avenir Roman', sans-serif;">
                                            @Html.DisplayFor(model => model.PhoneFormatted)
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                      
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="mt-4 d-flex gap-3 mx-4 mb-3">
                    <a href="@Url.Action("Index", "Customer")" class="btn btn-primary"
                       style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif; width: 250px;">
                        ⬅ Back to Customer List
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn" style="font-family: 'Avenir Heavy', sans-serif;">
                        Edit
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tooltip Initialization -->
<script>
    // Initialize tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
</script>

<style>
    h6 {
        font-weight: bold;
    }
</style>