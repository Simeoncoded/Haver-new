@model haver.Models.Customer

<partial name="_ViewHeading" />

<!-- Wrap everything in a Bootstrap container (optional if your site layout already provides one). -->
<div class="container my-3">

    <!-- Use a Bootstrap card to visually group the content. -->
    <div class="card border-primary">
        <div class="card-header bg-primary text-white">
            <h4>Customer Details</h4>
        </div>
        <div class="card-body">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <!-- Description list for fields -->
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Summary)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Summary)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DateSummary)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DateSummary)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Phone)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneFormatted)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CompanyName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CompanyName)</dd>
            </dl>
        </div>

        <!-- Card footer for actions or additional info -->
        <div class="card-footer">
            <!-- Delete form -->
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="ID" />
                <button type="submit" class="btn btn-danger">
                    <!-- Optional Font Awesome icon -->
                    <!-- <i class="fa fa-trash-alt"></i> -->
                    Delete
                </button>
            </form>
            <!-- "Back to List" partial -->
            <span class="mx-2">|</span>
            <partial name="_BackToList" />
        </div>
    </div>
</div>
