	@model haver.Models.Customer

	<partial name="_ViewHeading" />

	<div class="container-fluid bg-light my-3">
		<!-- Header -->
		<div class="row">
			<div class="col-md-12 py-4" style="background-color:#0C2340;">
				<h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
					Customer Details
				</h4>
			</div>
		</div>

		<!-- Details Content -->
		<div class="row py-4">
			<div class="col-md-8 offset-md-2">
				<div class="card border shadow-sm">
					<div class="card-body p-4">
						<div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

						<dl class="row mb-0">
						<dt class="col-sm-3" style="font-family: 'Avenir Heavy', sans-serif; color: #0C2340;">
							@Html.DisplayNameFor(model => model.CompanyName)
						</dt>
						<dd class="col-sm-9 mb-3" style="font-family: 'Avenir Roman', sans-serif;">
							@Html.DisplayFor(model => model.CompanyName)
						</dd>
						
							<dt class="col-sm-3" style="font-family: 'Avenir Heavy', sans-serif; color: #0C2340;">
								@Html.DisplayNameFor(model => model.Phone)
							</dt>
							<dd class="col-sm-9 mb-3" style="font-family: 'Avenir Roman', sans-serif;">
								@Html.DisplayFor(model => model.PhoneFormatted)
							</dd>

						
						</dl>
						<form asp-action="Delete" class="d-inline">
							
							<button type="submit" class="btn">
								Delete
							</button>

						<input type="hidden" asp-for="ID" />
						<a asp-action="Index" class="btn btn-secondary"
						   style="background-color:#6c757d; border-color:#6c757d; font-family: 'Avenir Heavy', sans-serif;">
							<i class="fa fa-arrow-left" aria-hidden="true"></i> Back to List
						</a>
						
						</form>
					</div>

				</div>
			</div>
		</div>
	</div>
