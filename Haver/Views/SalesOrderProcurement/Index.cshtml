@model IEnumerable<haver.Models.Procurement>

@{
    haver.Models.SalesOrder salesOrder = (haver.Models.SalesOrder)ViewBag.SalesOrder;
    <partial name="_SalesOrderDetail" model="salesOrder" />
    ViewData["Title"] = ViewData["ControllerFriendlyName"];
}

<h1 class="text-center my-4">Procurement Section</h1>

<form asp-action="Index" method="get" class="mb-4">
    <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
    <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
    <input type="hidden" name="SalesOrderID" value="@salesOrder.ID" />

    <button class="btn btn-outline-primary mb-3" type="button" data-bs-toggle="collapse" id="filterToggle" data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
        <i class="fa-solid fa-filter"></i> Filter/Search @ViewData["numberFilters"]
    </button>

    <div class="collapse @ViewData["ShowFilter"]" id="collapseFilter">
        <div class="card card-body bg-light">
            <div class="row">
                <div class="form-group col-md-4">
                    <label class="form-label fw-bold">Vendor:</label>
                    @Html.DropDownList("VendorID", null, "All Vendors", new { @class = "form-control" })
                </div>
                <div class="form-group col-md-4">
                    <label class="form-label fw-bold">Search PO Number:</label>
                    @Html.TextBox("SearchString", null, new { @class = "form-control", placeholder = "Enter PO Number" })
                </div>
                <div class="form-group col-md-4 align-self-end">
                    <input type="submit" name="actionButton" value="Apply" class="btn btn-outline-primary" />
                    <a asp-action="Index" asp-route-SalesOrderID="@salesOrder.ID" class="btn btn-outline-secondary">Clear</a>
                </div>
            </div>
        </div>
    </div>

    <table class="table table-striped table-bordered table-hover shadow-sm">
        <thead class="bg-dark text-white text-center">
            <tr>
                <th>
                    <button class="btn btn-link text-white p-0 fw-bold text-decoration-none" type="submit" name="actionButton" value="Vendor">
                        Vendor
                        @if (ViewData["sortField"]?.ToString() == "Vendor")
                        {
                            <i class="fa-solid @(ViewData["sortDirection"]?.ToString() == "asc" ? "fa-arrow-up" : "fa-arrow-down")"></i>
                        }
                    </button>
                </th>
                <th>
                    <button class="btn btn-link text-white p-0 fw-bold text-decoration-none" type="submit" name="actionButton" value="PONumber">
                        PO Number
                        @if (ViewData["sortField"]?.ToString() == "PONumber")
                        {
                            <i class="fa-solid @(ViewData["sortDirection"]?.ToString() == "asc" ? "fa-arrow-up" : "fa-arrow-down")"></i>
                        }
                    </button>
                </th>
                <th>
                    <button class="btn btn-link text-white p-0 fw-bold text-decoration-none" type="submit" name="actionButton" value="ExpDueDate">
                        Expected Due Date
                    </button>
                </th>
                <th>
                    <button class="btn btn-link text-white p-0 fw-bold text-decoration-none" type="submit" name="actionButton" value="DeliveryDate">
                        Delivery Date
                    </button>
                </th>
                <th class="text-center">
                    <a asp-controller="SalesOrderProcurement" asp-action="Add"
                       asp-route-SalesOrderID="@salesOrder.ID" asp-route-OrderNumber="@salesOrder.OrderNumber"
                       class="btn btn-success" data-bs-toggle="tooltip" title="Add Procurement Information">
                        <i class="fa-solid fa-plus"></i> Add
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Vendor.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.PONumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.ExpDueDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.DeliveryDate)</td>
                    <td class="text-center">
                        <a asp-controller="SalesOrderProcurement" asp-action="Update" asp-route-id="@item.ID"
                           class="btn btn-sm btn-outline-warning" role="button"
                           data-bs-toggle="tooltip" title="Edit Procurement">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a asp-controller="SalesOrderProcurement" asp-action="Remove" asp-route-id="@item.ID"
                           class="btn btn-sm btn-outline-danger" role="button"
                           data-bs-toggle="tooltip" title="Delete Procurement">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <partial name="_PagingNavBar" />

    <div class="mt-3">
        @if (salesOrder.Status != Status.Completed)
        {
            <a asp-action="Edit" asp-controller="SalesOrder" asp-route-id="@salesOrder.ID" class="btn btn-outline-info">
                Edit Sales Order @salesOrder.OrderNumber
            </a>
        }

        <a href='@ViewData["returnURL"]' class="btn btn-outline-secondary">Back to Sales Order List</a>

        @if (salesOrder.Status != Status.Completed && salesOrder.Status != Status.Archived)
        {
            <a asp-action="Complete" asp-controller="SalesOrder" asp-route-id="@salesOrder.ID" class="btn">
                Mark as Completed
            </a>
        }

        <button type="button" class="btn" onclick="window.print();">
            <i class="fa-solid fa-print"></i> Print
        </button>
    </div>


</form>

@section Scripts {
    <script type="text/javascript">
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}

<style>
    .btn-link {
        color: white;
        text-decoration: none;
    }

        .btn-link:hover {
            text-decoration: underline;
        }


    .align-middle button {
        background: none;
        outline: none;
    }

  
</style>
