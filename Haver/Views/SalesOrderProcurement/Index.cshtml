@model IEnumerable<haver.Models.Procurement>

@{
    haver.Models.SalesOrder salesOrder = (haver.Models.SalesOrder)ViewBag.SalesOrder;
    <partial name="_SalesOrderDetail" model="salesOrder" />
    ViewData["Title"] = ViewData["ControllerFriendlyName"];
}
<h1 style="text-align:center; ";>Procurement Section</h1>
<br />
<br />
<form asp-action="Index" method="get">
    <input type="hidden" name="sortDirection" value="@ViewData["sortDirection"]" />
    <input type="hidden" name="sortField" value="@ViewData["sortField"]" />
    <input type="hidden" name="SalesOrderID" value="@salesOrder.ID" />
    <div class="form-horizontal">
        <button class="btn @(ViewData["Filtering"])" type="button" data-bs-toggle="collapse" id="filterToggle" data-bs-target="#collapseFilter" aria-expanded="false" aria-controls="collapseFilter">
            Filter/Search @ViewData["numberFilters"]
        </button><br />
        <div class="collapse @ViewData["ShowFilter"]" id="collapseFilter">
            <div class="collapse card card-body bg-light" style="padding-top: 10px; padding-bottom: 5px;" id="collapseFilter">
                <div class="row">
                    <div class="form-group col-md-4 ml-md-3">
                        <label class="control-label">Reason:</label>
                        @Html.DropDownList("VendorID", null, "All Vendors", htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4">
                        <label class="control-label">Search PO Number:</label>
                        @Html.TextBox("SearchString", null, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-md-4 align-self-end">
                        <input type="submit" name="actionButton" value="Apply" class="btn btn-primary" />
                        <a asp-action="Index" asp-route-SalesOrderID="@salesOrder.ID">Clear</a>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <table class="table">
                <tr>
                    <th>
                        <input type="submit" name="actionButton" value="Vendor" class="btn btn-link" />
                    </th>
                    <th>
                        <input type="submit" name="actionButton" value="PO Number" class="btn btn-link" />
                    </th>
                    <th>
                        <input type="submit" value="ExpDueDate" class="btn btn-toolbar" />
                    </th>
                    <th>
                        <input type="submit" value="DeliveryDate" class="btn btn-toolbar" />
                    </th>
                    <th>
                        <a asp-controller="SalesOrderProcurement" asp-action="Add"
                           asp-route-SalesOrderID="@salesOrder.ID" asp-route-OrderNumber="@salesOrder.OrderNumber">
                            <span class="btn btn-success" data-bs-toggle="tooltip"
                                  title="Add Procument Information"><strong>&#x271A; Add</strong></span>
                        </a>
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vendor.Name) 
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PONumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExpDueDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DeliveryDate)
                        </td>
                        
                
                        <td>
                            <a asp-controller="SalesOrderProcurement" asp-action="Update" asp-route-id="@item.ID"
                               class="btn btn-sm btn-outline-primary" role="button"
                               data-bs-toggle="tooltip" title="Edit @ViewData["ControllerFriendlyName"]">
                                &#x270D;
                            </a>
                            <a asp-controller="SalesOrderProcurement" asp-action="Remove" asp-route-id="@item.ID"
                               class="btn btn-sm btn-outline-danger" role="button"
                               data-bs-toggle="tooltip" title="Delete @ViewData["ControllerFriendlyName"]">
                                &#x274C;
                            </a>
                        </td>
                    </tr>
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </table>
        </div>
    </div>
    <partial name="_PagingNavBar" />
    <div>
        <a asp-action="Edit" asp-controller="SalesOrder" asp-route-id="@salesOrder.ID">Edit @salesOrder.OrderNumber</a> |
        <a href='@ViewData["returnURL"]'>Back to Sales Order List</a>
    </div>
</form>
@section Scripts {
    <script type="text/javascript">
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}
