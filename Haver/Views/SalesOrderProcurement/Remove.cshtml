@model haver.Models.Procurement

@{
    ViewData["Title"] = "Remove Procurement";
}

<h2>Remove Procurement Information for Sales Order: @Model.SalesOrder.OrderNumber</h2>

<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vendor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vendor.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PONumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PONumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpDueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpDueDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>
    </dl>


    <form asp-action="Remove">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <partial name="_BackToList" />
    </form>
</div>