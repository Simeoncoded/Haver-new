@model haver.Models.Note

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 py-3" style="background-color: #0C2340;">
            <h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif;">Edit Note</h4>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Edit" class="border p-4 shadow-sm bg-light rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="ID" />

                <div class="form-group mb-3">
                    <label asp-for="PreOrder" class="control-label" style="font-family: 'Avenir Roman', sans-serif;">PreOrder</label>
                    <textarea asp-for="PreOrder" class="form-control summernote" style="font-family: 'Avenir Roman', sans-serif;"></textarea>
                    <span asp-validation-for="PreOrder" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Scope" class="control-label" style="font-family: 'Avenir Roman', sans-serif;">Scope</label>
                    <textarea asp-for="Scope" class="form-control summernote" style="font-family: 'Avenir Roman', sans-serif;"></textarea>
                    <span asp-validation-for="Scope" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AssemblyHours" class="control-label" style="font-family: 'Avenir Roman', sans-serif;">Assembly Hours</label>
                    <input asp-for="AssemblyHours" class="form-control" style="font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="AssemblyHours" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ReworkHours" class="control-label" style="font-family: 'Avenir Roman', sans-serif;">Rework Hours</label>
                    <input asp-for="ReworkHours" class="form-control" style="font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="ReworkHours" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="BudgetHours" class="control-label" style="font-family: 'Avenir Roman', sans-serif;">Budget Hours</label>
                    <input asp-for="BudgetHours" class="form-control" style="font-family: 'Avenir Roman', sans-serif;" />
                    <span asp-validation-for="BudgetHours" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NamePlate" class="control-label" style="font-family: 'Avenir Roman', sans-serif;">Name Plate</label>
                    <select asp-for="NamePlate" class="form-control" asp-items="Html.GetEnumSelectList<NamePlate>()" style="font-family: 'Avenir Roman', sans-serif;"></select>
                    <span asp-validation-for="NamePlate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MachineScheduleID" class="control-label" style="font-family: 'Avenir Roman', sans-serif;">Machine Schedule</label>
                    <select asp-for="MachineScheduleID" class="form-control" asp-items="ViewBag.MachineScheduleID" style="font-family: 'Avenir Roman', sans-serif;"></select>
                    <span asp-validation-for="MachineScheduleID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary"
                            style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif;">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6 offset-md-3">
            <partial name="_BackToList" />
        </div>
    </div>
</div>



@section Head {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.css" rel="stylesheet">
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 150, // Set height for the editor
                toolbar: [
                    ['style', ['bold', 'italic', 'underline', 'clear']], // Text styles
                    ['font', ['color']], // Add color picker for text and background colors
                    ['para', ['ul', 'ol', 'paragraph']], // List and paragraph options
                    ['insert', ['link', 'picture', 'video']], // Insert options
                    ['view', ['fullscreen', 'codeview', 'help']] // View options
                ],
                colors: [
                    // Define a full range of colors
                    ['#000000', '#424242', '#636363', '#9C9C94', '#CEC6CE', '#EFEFEF', '#F7F7F7', '#FFFFFF'],
                    ['#FF0000', '#FF9C00', '#FFFF00', '#00FF00', '#00FFFF', '#0000FF', '#9C00FF', '#FF00FF'],
                    ['#F4CCCC', '#FCE5CD', '#FFF2CC', '#D9EAD3', '#D0E0E3', '#C9DAF8', '#CFE2F3', '#D9D2E9'],
                    ['#EA9999', '#F9CB9C', '#FFE599', '#B6D7A8', '#A2C4C9', '#A4C2F4', '#9FC5E8', '#B4A7D6'],
                    ['#E06666', '#F6B26B', '#FFD966', '#93C47D', '#76A5AF', '#6D9EEB', '#6FA8DC', '#8E7CC3'],
                    ['#CC0000', '#E69138', '#F1C232', '#6AA84F', '#45818E', '#3C78D8', '#3D85C6', '#674EA7'],
                    ['#990000', '#B45F06', '#BF9000', '#38761D', '#134F5C', '#1155CC', '#0B5394', '#351C75'],
                    ['#660000', '#783F04', '#7F6000', '#274E13', '#0C343D', '#1C4587', '#073763', '#20124D']
                ] // Custom color palette
            });

           
        });
    </script>
}
