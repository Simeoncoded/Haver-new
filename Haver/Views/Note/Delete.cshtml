@model haver.Models.Note

<partial name="_ViewHeading" />

<div class="container my-3">
    <div class="card border-primary">
        <div class="card-header bg-primary text-white">
            <h4>Note Details</h4>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PreOrder)</dt>
                <dd class="col-sm-9">@Html.Raw(Model.PreOrder)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Scope)</dt>
                <dd class="col-sm-9">@Html.Raw(Model.Scope)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AssemblyHours)</dt>
                <dd class="col-sm-9">@Html.DisplayNameFor(model => model.AssemblyHours)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ReworkHours)</dt>
                <dd class="col-sm-9">@Html.DisplayNameFor(model => model.ReworkHours)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BudgetHours)</dt>
                <dd class="col-sm-9">@Html.DisplayNameFor(model => model.BudgetHours)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NamePlate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NamePlate)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MachineSchedule)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MachineSchedule.Summary)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="ID" />
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <span class="mx-2">|</span>
            <partial name="_BackToList" />
        </div>
    </div>
</div>
