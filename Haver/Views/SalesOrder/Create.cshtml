@model haver.Models.SalesOrder

<div class="container-fluid bg-light">
    <!-- Header -->
    <div class="row">
        <div class="col-md-12 py-4" style="background-color:#0C2340;">
            <h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
               Create a Sales Order
            </h4>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row py-4">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create" class="border p-4 shadow-sm" aria-label="Create Sales Order Information">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Row with two inputs side by side -->
                <div class="row">
                    <!-- Order Number -->
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="OrderNumber" class="control-label"
                               style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Order Number
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the sales order number."></i>
                        </label>
                        <input asp-for="OrderNumber" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" tabindex="1" placeholder="Enter Order Number" />
                        <span asp-validation-for="OrderNumber" class="text-danger"></span>
                    </div>

                    <!-- Sales Order Date -->
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="SoDate" class="control-label"
                               style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Sales Order Date
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the sales order date."></i>
                        </label>
                        <input asp-for="SoDate" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" tabindex="2" />
                        <span asp-validation-for="SoDate" class="text-danger"></span>
                    </div>
                </div>

                <!-- Row with two more inputs side by side -->
                <div class="row">
                    <!-- Price -->
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Price" class="control-label"
                               style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Price
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the total price for the order."></i>
                        </label>
                        <input asp-for="Price" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" tabindex="3" placeholder="Enter Order Price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <!-- Shipping Terms -->
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="ShippingTerms" class="control-label"
                               style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Shipping Terms
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the shipping terms for the order."></i>
                        </label>
                        <input asp-for="ShippingTerms" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" tabindex="4" placeholder="Enter Shipping Terms" />
                        <span asp-validation-for="ShippingTerms" class="text-danger"></span>
                    </div>
                </div>

                <!-- Row with two more inputs side by side -->
                <div class="row">
                    <!-- App Dwg Rcd -->
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="AppDwgRcd" class="control-label"
                               style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Application Drawing Record
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the application drawing record date."></i>
                        </label>
                        <input asp-for="AppDwgRcd" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" tabindex="5" />
                        <span asp-validation-for="AppDwgRcd" class="text-danger"></span>
                    </div>

                    <!-- Dwg Is Dt -->
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="DwgIsDt" class="control-label"
                               style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Drawing Is Date
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Enter the drawing is date."></i>
                        </label>
                        <input asp-for="DwgIsDt" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" tabindex="6" />
                        <span asp-validation-for="DwgIsDt" class="text-danger"></span>
                    </div>
                </div>

                <!-- Customer ID -->
                <div class="row">
                <div class=" col-md-12 form-group mb-3">
                    <label asp-for="CustomerID" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Customer
                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Select the customer for this order."></i>
                    </label>
                    <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID" tabindex="7"></select>
                </div>

                <!-- Comments -->
                <div class="col-md-12 form-group mb-3">
                    <label asp-for="Comments" class="control-label"
                           style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                        Comments
                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Add any comments related to the sales order."></i>
                    </label>
                    <textarea asp-for="Comments" class="form-control summernote"
                           style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" tabindex="8"></textarea>
                    <span asp-validation-for="Comments" class="text-danger"></span>
                </div>
                </div>

                <!-- Specialties -->
                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label class="control-label">Engineers Assigned</label>
                        <button type="button" id="btnRight" class="btn btn-danger btn-sm">
                            <strong>-</strong>
                        </button>
                        @Html.ListBox("selectedOptions", (MultiSelectList)ViewBag.selOpts, new { @size = 10, @class = "form-control" })
                    </div>

                    <div class="col-md-6 form-group mb-3">
                        <label class="control-label">Choose Engineers</label>
                        <button type="button" id="btnLeft" class="btn btn-success btn-sm">
                            <strong>+</strong>
                        </button>
                        @Html.ListBox("availOptions", (MultiSelectList)ViewBag.availOpts, new { @size = 10, @class = "form-control" })
                    </div>
                </div>

                <!-- Submit Button -->
               <div class="form-group text-center">
    <button type="submit" class="btn btn-primary" id="btnSubmit"
            style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif;"
            name="actionType" value="next">
        Next
    </button>

    <button type="submit" class="btn btn-secondary" id="btnSave"
            style="background-color:#6c757d; border-color:#6c757d; font-family: 'Avenir Heavy', sans-serif;"
            name="actionType" value="save">
        Save as Drafts
    </button>
</div>


                <!-- Back to Previous Page -->
                <div class="d-flex flex-column align-items-start gap-2">
                   @*  <button onclick="goBack()" class="btn btn-primary"
                            style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif; width: 250px;">
                        ⬅ Back To Previous Page
                    </button>
 *@
                    <!-- Back to Sales Order List -->
                    <a href="@Url.Action("Index", "SalesOrder")" class="btn btn-primary"
                       style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif; width: 250px;">
                        ⬅ Back to Sales Order List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
