@model IEnumerable<haver.Models.SalesOrder>

<h1 class="text-center my-4">Sales Order Index</h1>
<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> Create New @ViewData["ControllerFriendlyName"]
    </a>
</div>
<form asp-action="index" method="get">
<table class="table table-striped table-bordered table-hover shadow-sm">
    <thead class="thead-dark bg-dark text-white">
        <tr>
            <th>@Html.DisplayNameFor(model => model.OrderNumber)</th>
            <th>@Html.DisplayNameFor(model => model.SoDate)</th>
            <th>@Html.DisplayNameFor(model => model.PoNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Customer)</th>
            <th>@Html.DisplayNameFor(model => model.Vendor)</th>
            <th>@Html.DisplayNameFor(model => model.MachineSchedule)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.OrderNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.SoDate)</td>
                <td>@Html.DisplayFor(modelItem => item.PoNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Customer.Summary)</td>
                <td>@Html.DisplayFor(modelItem => item.Vendor.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.MachineSchedule.ID)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn ">
                        <i class="fa-solid fa-pen-to-square"></i> Edit
                    </a> |
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn">  <i class="fa-solid fa-circle-info"></i> Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn"> <i class="fa-solid fa-delete-left"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    <partial name="_PagingNavBar" />
</form>