 @model haver.Models.Machine

    <div class="modal fade" id="addMachineModal" tabindex="-1" aria-labelledby="addMachineModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addMachineModalLabel">Add New Machine</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" style="margin:0 auto; width:98%; ">
                    <form  id="createMachineForm" asp-action="CreateFromModal" asp-controller="Machine" method="post">
                         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <ul id="ErrorList" class="text-danger"></ul>
                    @* <input type="hidden" id="SalesOrderID" name="SalesOrderID" /> *@
