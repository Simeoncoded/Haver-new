@model haver.Models.SalesOrder

<div class="text-end">
    @if (Model?.Status == Status.Completed)
    {
        <span class="badge bg-success">Completed</span>
        <a asp-action="Index" class="ms-3">Back to List</a>
    }
    else
    {
        @if (Model?.Status != Status.Archived)
        {
            <a asp-action="Edit" asp-route-id="@Model?.ID" class="ms-3">Edit</a>
        }

        <a asp-action="Index" class="ms-3">Back to List</a>

        @if (Model?.Status != Status.Completed && Model?.Status != Status.Archived)
        {
            <a asp-action="Complete" asp-controller="SalesOrder" asp-route-id="@Model?.ID" class="btn no-print ms-3" onclick="return confirm('Are you sure you want to mark this sales order as completed?');">
                Mark as Completed
            </a>

        }
    }
</div>


