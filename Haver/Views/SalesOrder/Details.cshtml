    <div>
        <h4 class="section-header">Machines and Procurement Information</h4>
        <table class="table procurement-table">
            <thead>
                <tr>
                    <th>Machine Type & Serial Number</th>
                    <th>Vendor</th>
                    <th>PO Number</th>
                     <th>Exp Due Date</th>
                    <th>PO Due Date</th>
                    <th>PO Received Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var machine in Model.Machines)
                {
                    @if (machine.Procurements != null && machine.Procurements.Any())
                    {
                        bool firstRow = true;

                        foreach (var procurement in machine.Procurements)
                        {
                            <tr>
                                @if (firstRow)
                                {
                                    <td rowspan="@machine.Procurements.Count">
                                        <a asp-controller="MachineProcurement" asp-action="Index"
                                           asp-route-id="@machine.ID">
                                            @Html.DisplayFor(m => machine.Description)
                                        </a>
                                    </td>
                                    firstRow = false;
                                }

                                <td>@Html.DisplayFor(m => procurement.Vendor.Name)</td>
                                <td>@Html.DisplayFor(m => procurement.PONumber)</td>
                                <td>@Html.DisplayFor(m => procurement.ExpDueDate)</td>
                                <td>@Html.DisplayFor(m => procurement.PODueDate)</td>
                                <td>@Html.DisplayFor(m => procurement.PORcd)</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => machine.Description)</td>
                            <td colspan="2" class="text-center">No Procurement Details</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
