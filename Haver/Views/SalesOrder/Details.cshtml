<style>
    @@media print {
        body * {
            visibility: hidden;
        }

        #printableArea, #printableArea * {
            visibility: visible;
        }

        #printableArea {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }

        .info-box dt {
            width: 30%;
            float: left;
            clear: both;
            margin-bottom: 0.5rem;
        }

        .info-box dd {
            width: 70%;
            float: left;
            margin-bottom: 0.5rem;
        }

        .procurement-table {
            width: 100% !important;
            font-size: 12px;
        }

        .section-header {
            font-size: 18px !important;
            margin: 15px 0;
        }

        .badge, .btn {
            display: none !important;
        }

        .bg-light, .bg-dark {
            background-color: #fff !important;
        }

        table {
            page-break-inside: auto !important;
        }

        tr {
            page-break-inside: avoid !important;
        }
    }
</style>