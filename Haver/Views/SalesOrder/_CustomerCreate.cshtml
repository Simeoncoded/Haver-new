@model haver.Models.Customer
<form asp-controller="Customer" asp-action="Create" id="createCustomerForm">
    <div class="text-danger validation-summary-errors"><ul id="ErrorList"></ul></div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="CompanyName" class="control-label"></label>
                <textarea asp-for="CompanyName" class="form-control"></textarea>
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <textarea asp-for="FirstName" class="form-control"></textarea>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <textarea asp-for="LastName" class="form-control"></textarea>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleName" class="control-label"></label>
                <textarea asp-for="MiddleName" class="form-control"></textarea>
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <textarea asp-for="Phone" class="form-control"></textarea>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" id="submitCustomerCreate" class="btn btn-outline-secondary" />
            </div>
        </div>
    </div>
</form>