@model haver.Models.SalesOrder

@{
    ViewData["Title"] = "Edit Sales Order";
}

<div class="container-fluid bg-light">
    <!-- Header -->
    <div class="row">
        <div class="col-md-12 py-4" style="background-color:#0C2340;">
            <h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
                Edit Sales Order
            </h4>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row py-4">
        <div class="col-md-10 offset-md-1">
            <form asp-action="Edit" class="border p-4 shadow-sm" aria-label="Edit Sales Order">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <h6 class="mb-4" style="color: #0C2340;"><b>Fields marked with <span class="text-danger">*</span> are required</b></h6>

                <!-- First Row -->
                <div class="row">
                    <!-- Order Number -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="OrderNumber" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            @Html.DisplayNameFor(model => model.OrderNumber) <span class="text-danger">*</span>
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Edit Order Number"></i>
                        </label>
                        <input asp-for="OrderNumber" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="OrderNumber" class="text-danger"></span>
                    </div>

                    <!-- SO Date -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="SoDate" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            @Html.DisplayNameFor(model => model.SoDate) <span class="text-danger">*</span>
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Sales order creation date"></i>
                        </label>
                        <input asp-for="SoDate" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="SoDate" class="text-danger"></span>
                    </div>

                    <!-- Company Name -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="CompanyName" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            @Html.DisplayNameFor(model => model.CompanyName) <span class="text-danger">*</span>
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Customer company name"></i>
                        </label>
                        <input asp-for="CompanyName" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                </div>

                <!-- Second Row -->
                <div class="row">
                    <!-- Price -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="Price" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            @Html.DisplayNameFor(model => model.Price)
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Total order value"></i>
                        </label>
                        <input asp-for="Price" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <!-- Currency -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="Currency" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            @Html.DisplayNameFor(model => model.Currency)
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Transaction currency"></i>
                        </label>
                        <select asp-for="Currency" class="form-control"
                                style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;">
                            <option value="">-- Select Currency --</option>
                            <option value="USD">USD ($)</option>
                            <option value="CAD">CAD ($)</option>
                            <option value="EUR">EUR (€)</option>
                            <option value="GBP">GBP (£)</option>
                        </select>
                        <span asp-validation-for="Currency" class="text-danger"></span>
                    </div>

                    <!-- Shipping Terms -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="ShippingTerms" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            @Html.DisplayNameFor(model => model.ShippingTerms)
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Shipping terms and conditions"></i>
                        </label>
                        <input asp-for="ShippingTerms" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="ShippingTerms" class="text-danger"></span>
                    </div>
                </div>

                <!-- Third Row -->
                <div class="row">
                    <!-- AppDwgRel -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="AppDwgRel" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            @Html.DisplayNameFor(model => model.AppDwgRel)
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Drawing release date"></i>
                        </label>
                        <input asp-for="AppDwgRel" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="AppDwgRel" class="text-danger"></span>
                    </div>

                    <!-- AppDwgRet -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="AppDwgRet" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            @Html.DisplayNameFor(model => model.AppDwgRet)
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Drawing return date"></i>
                        </label>
                        <input asp-for="AppDwgRet" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="AppDwgRet" class="text-danger"></span>
                    </div>

                    <!-- AppDwgExp -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="AppDwgExp" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            @Html.DisplayNameFor(model => model.AppDwgExp) <span class="text-danger">*</span>
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Drawing expection date"></i>
                        </label>
                        <input asp-for="AppDwgExp" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="AppDwgExp" class="text-danger"></span>
                    </div>
                </div>

                <!-- Fourth Row -->
                <div class="row">
                    <!-- PreOExp -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="PreOExp" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            @Html.DisplayNameFor(model => model.PreOExp) <span class="text-danger">*</span>
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Pre-order expected date"></i>
                        </label>
                        <input asp-for="PreOExp" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="PreOExp" class="text-danger"></span>
                    </div>

                    <!-- PreORel -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="PreORel" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            @Html.DisplayNameFor(model => model.PreORel)
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Pre-order release date"></i>
                        </label>
                        <input asp-for="PreORel" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="PreORel" class="text-danger"></span>
                    </div>

                    <!-- EngPExp -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="EngPExp" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            @Html.DisplayNameFor(model => model.EngPExp)
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Engineering package Expected Date"></i>
                        </label>
                        <input asp-for="EngPExp" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="EngPExp" class="text-danger"></span>
                    </div>
                </div>

                <!-- Fifth Row -->
                <div class="row">
                    <!-- EngPRel -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="EngPRel" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            @Html.DisplayNameFor(model => model.EngPRel)
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Engineering package release date"></i>
                        </label>
                        <input asp-for="EngPRel" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="EngPRel" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <!-- Comments Section -->
                    <div class="form-group col-md-6 mb-4">
                        <label asp-for="Comments" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Comments
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Additional notes or comments"></i>
                        </label>
                        <textarea asp-for="Comments" class="form-control summernote"
                                  style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;"></textarea>
                        <span asp-validation-for="Comments" class="text-danger"></span>
                    </div>

                    <!-- Engineers Assignment -->
                    <div class="form-group col-md-6 mb-4">
                        <label class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Assign Engineers
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Select multiple engineers using CTRL/CMD click"></i>
                        </label>
                        <select id="engineersDropdown" name="selectedOptions" class="form-control selectpicker"
                                multiple data-live-search="true" data-actions-box="true"
                                style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif; height:237px;">
                            @if (ViewBag.availOpts != null && ViewBag.selOpts != null)
                            {
                                var allEngineers = ((MultiSelectList)ViewBag.availOpts).Items.Cast<haver.ViewModels.ListOptionVM>()
                                .Union(((MultiSelectList)ViewBag.selOpts).Items.Cast<haver.ViewModels.ListOptionVM>())
                                .OrderBy(e => e.DisplayText)
                                .ToList();

                                var selectedEngineers = ((MultiSelectList)ViewBag.selOpts).Items.Cast<haver.ViewModels.ListOptionVM>()
                                .Select(x => x.ID).ToHashSet();

                                foreach (var item in allEngineers)
                                {
                                    var isSelected = selectedEngineers.Contains(item.ID);
                                    <option value="@item.ID" selected="@(isSelected ? "selected" : null)">@item.DisplayText</option>
                                }
                            }
                        </select>

                    </div>

                </div>



                
                <!-- Form Actions -->
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary mr-2"
                            style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif;">
                        Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary"
                       style="background-color:#6c757d; border-color:#6c757d; font-family: 'Avenir Heavy', sans-serif;">
                        Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

