                <div class="row">
                   

                    <!-- Comments Section -->
                    <div class="form-group col-md-6 mb-4">
                        <label asp-for="Comments" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Comments
                        </label>
                        <textarea asp-for="Comments" class="form-control summernote"
                                  style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;"></textarea>
                        <span asp-validation-for="Comments" class="text-danger"></span>
                    </div>

                    <!-- Engineers Assignment -->
                    <div class="form-group col-md-6 mb-4">
                        <label class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Assign Engineers
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Select multiple engineers using CTRL/CMD click"></i>
                        </label>
                        <select id="engineersDropdown" name="selectedOptions" class="form-control selectpicker"
                                multiple data-live-search="true" data-actions-box="true"
                                style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif; height:237px;">
                            @if (ViewBag.availOpts != null && ViewBag.selOpts != null)
                            {
                                var allEngineers = ((MultiSelectList)ViewBag.availOpts).Items.Cast<haver.ViewModels.ListOptionVM>()
                                .Union(((MultiSelectList)ViewBag.selOpts).Items.Cast<haver.ViewModels.ListOptionVM>())
                                .OrderBy(e => e.DisplayText)
                                .ToList();

                                var selectedEngineers = ((MultiSelectList)ViewBag.selOpts).Items.Cast<haver.ViewModels.ListOptionVM>()
                                .Select(x => x.ID).ToHashSet();

                                foreach (var item in allEngineers)
                                {
                                    var isSelected = selectedEngineers.Contains(item.ID);
                                    <option value="@item.ID" selected="@(isSelected ? "selected" : null)">@item.DisplayText</option>
                                }
                            }
                        </select>

                    </div>

                </div>



                
