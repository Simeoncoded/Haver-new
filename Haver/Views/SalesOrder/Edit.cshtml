                        </label>
                        <input asp-for="ShippingTerms" class="form-control" placeholder="Enter Shipping Terms"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="ShippingTerms" class="text-danger"></span>
                    </div>

                    <!-- Price -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="Price" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Price
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Total value of the sales order"></i>
                        </label>
                        <input asp-for="Price" class="form-control" placeholder="Enter Sales Order Price"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>


                    <!-- Currency -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="Currency" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Currency
                        </label>
                        <select asp-for="Currency" class="form-control" id="currencyDropdown"
                                style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;">
                            <option value="">-- Select Currency --</option>
                            <option value="USD">USD ($)</option>
                            <option value="CAD">CAD ($)</option>
                            <option value="EUR">EUR (€)</option>
                            <option value="GBP">GBP (£)</option>
                        </select>
                        <span asp-validation-for="Currency" class="text-danger"></span>
                    </div>




                    <div class="form-group  col-md-6 mb-3 form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsDraft" /> Draft Record (Checking this box saves the order as a draft record; required dates will not be mandatory.)
                        </label>
                    </div>
                </div>


