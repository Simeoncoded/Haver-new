@model haver.Models.SalesOrder

@{
    ViewData["Title"] = "Edit Sales Order";
}

<div class="container-fluid bg-light">
    <!-- Header -->
    <div class="row">
        <div class="col-md-12 py-4" style="background-color:#0C2340;">
            <h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
                Edit Sales Order
            </h4>
        </div>
    </div>

    <!-- Centered Form -->
    <div class="row py-4">
        <div class="col-md-10 offset-md-1">
            <form asp-action="Edit" class="border p-4 shadow-sm" aria-label="Edit Sales Order">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <h6 class="mb-4" style="color: #0C2340;"><b>Fields marked with <span class="text-danger">*</span> are required</b></h6>

                <!-- First Row -->
                <div class="row">
                    <!-- Order Number -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="OrderNumber" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Order Number <span class="text-danger">*</span>
                        </label>
                        <input asp-for="OrderNumber" class="form-control" placeholder="Enter Order Number"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="OrderNumber" class="text-danger"></span>
                    </div>

                    <!-- Company Name -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="CompanyName" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Company Name <span class="text-danger">*</span>
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Customer"></i>
                        </label>
                        <input asp-for="CompanyName" class="form-control" placeholder="Enter Company Name"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="companyNameInput" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>

                    <!-- SO Date -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="SoDate" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Order Date <span class="text-danger">*</span>

                        </label>
                        <input asp-for="SoDate" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" id="companyNameInput" />
                        <span asp-validation-for="SoDate" class="text-danger"></span>
                    </div>
                </div>

                <!-- Second Row -->
                <div class="row">
                    <!-- EngPExp -->
