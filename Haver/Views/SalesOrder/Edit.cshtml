                        </label>
                        <input asp-for="PreOExp" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="PreOExp" class="text-danger"></span>
                    </div>




                </div>

                <!-- Fourth Row -->
                <div class="row">



                    <!-- PreORel -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="PreORel" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Pre-Orders Released
                            <i class="fas fa-info-circle" data-bs-toggle="tooltip" title="Pre-orders release date"></i>
                        </label>
                        <input asp-for="PreORel" class="form-control"
                               style="border-color:#0C2340; font-family: 'Avenir Roman', sans-serif;" />
                        <span asp-validation-for="PreORel" class="text-danger"></span>
                    </div>

                    <!-- Shipping Terms -->
                    <div class="form-group col-md-4 mb-3">
                        <label asp-for="ShippingTerms" class="control-label" style="font-family: 'Avenir Roman', sans-serif; color:#0C2340;">
                            Shipping Terms
