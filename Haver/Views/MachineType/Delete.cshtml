@model haver.Models.MachineType

@{
    ViewData["Title"] = "Delete Machine Type";
}

<div class="container-fluid bg-light my-3">
    <div class="row">

        <div class="col-md-12 py-4" style="background-color:#0C2340;">
            <h4 class="text-white" style="font-family: 'Avenir Heavy', sans-serif; font-size: 19px;">
                Delete Machine Type
            </h4>
        </div>

       
        <div class="row py-4">
            <div class="col-md-8 offset-md-2">
                <div class="card border shadow-sm">
                    <div class="card-body p-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                        <h5>Are you sure you want to delete this?</h5>
                        <hr />

                        <dl class="row mb-0">

                            <dt class="col-sm-3" style="font-family: 'Avenir Heavy', sans-serif; color: #0C2340;">
                                @Html.DisplayNameFor(model => model.Class)
                            </dt>
                            <dd class="col-sm-9 mb-3" style="font-family: 'Avenir Roman', sans-serif;">
                                @Html.DisplayFor(model => model.Class)
                            </dd>
                            <dt class="col-sm-3" style="font-family: 'Avenir Heavy', sans-serif; color: #0C2340;">
                                @Html.DisplayNameFor(model => model.Size)
                            </dt>
                            <dd class="col-sm-9 mb-3" style="font-family: 'Avenir Roman', sans-serif;">
                                @Html.DisplayFor(model => model.Size)
                            </dd>
                            <dt class="col-sm-3" style="font-family: 'Avenir Heavy', sans-serif; color: #0C2340;">
                                @Html.DisplayNameFor(model => model.Deck)
                            </dt>
                            <dd class="col-sm-9 mb-3" style="font-family: 'Avenir Roman', sans-serif;">
                                @Html.DisplayFor(model => model.Deck)
                            </dd>
                            <dt class="col-sm-3" style="font-family: 'Avenir Heavy', sans-serif; color: #0C2340;">
                                Description
                            </dt>
                            <dd class="col-sm-9 mb-3" style="font-family: 'Avenir Roman', sans-serif;">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                        </dl>

                        <form asp-action="Delete" class="d-inline">
                            <input type="hidden" asp-for="ID" />

                        
                            <button type="submit" class="btn">
                                 Delete
                            </button>

                            <a href="@Url.Action("Index", "MachineType")" class="btn btn-primary"
                               style="background-color:#0C2340; border-color:#0C2340; font-family: 'Avenir Heavy', sans-serif; width: 250px;">
                                ⬅ Back to List
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
