@page
@model LoginModel

@{
    ViewData["Title"] = "";
}

<head>
    <link href="~/css//login.css" rel="stylesheet" type="text/css" />

</head>

<div class="bg-overlay"></div>
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section class="lsec">
            <form id="account" method="post">
                <h2>Login</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <!-- Removed duplicate label -->
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label for="Input.Email" class="form-label" style="color:#0C2340;">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <!-- Removed duplicate label -->
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label for="Input.Password" class="form-label" style="color:#0C2340;">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg ">Log in</button>
                </div>

                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                </div>
            </form>
        </section>

    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
